% if (my $full_names = $refs->{$commit->{id}}) {
  % for my $full_name (@$full_names) {
    % my ($type, $name) = $full_name =~ m#^(.+?)s/(.+)#;
    
    <span class="refs">
      <span class="<%= $type %>" title="<%= $full_name %>">
        <a href="<%= url_for('/shortlog')->query({home => $home, project => $project, cid => $name}) %>">
          <%= $name %>
        </a>
      </span>
    </span>
    
  % }
% }
